{
  "frame_buffer_num": 2,
  "timestamp_query_dst_resource_num":3,
  "primarybuffer_width": 400,
  "primarybuffer_height": 300,
  "primarybuffer_format": "R8G8B8A8_UNORM",
  "window": {
    "title": "config.json",
    "width": 1200,
    "height" : 500
  },
  "command_queue": [
    {
      "name": "queue_graphics",
      "type": "3d",
      "priority": "normal",
      "command_list_num": 1
    },
    {
      "name": "queue_compute",
      "type": "compute",
      "priority": "normal",
      "command_list_num": 1
    },
    {
      "name": "queue_copy",
      "type": "copy",
      "priority": "normal",
      "command_list_num": 1
    }
  ],
  "swapchain": {
    "command_queue": "queue_graphics",
    "format": "R8G8B8A8_UNORM",
    "usage": ["RENDER_TARGET_OUTPUT"]
  },
  "buffer": [
    {
      "name": "uav",
      "size_type": "swapchain_relative",
      "initial_state": "uav"
    },
    {
      "name": "pingpong",
      "pingpong": true,
      "initial_state": "rtv"
    },
    {
      "name": "cbv-a",
      "frame_buffered": true,
      "format": "UNKNOWN",
      "heap_type": "upload",
      "dimension": "buffer",
      "size_type": "absolute",
      "width": 256,
      "initial_state": "generic_read"
    },
    {
      "name": "cbv-b",
      "frame_buffered": true,
      "format": "UNKNOWN",
      "heap_type": "upload",
      "dimension": "buffer",
      "size_type": "absolute",
      "width": 256,
      "initial_state": "generic_read"
    },
    {
      "name": "cbv-c",
      "frame_buffered": true,
      "format": "UNKNOWN",
      "heap_type": "upload",
      "dimension": "buffer",
      "size_type": "absolute",
      "width": 256,
      "initial_state": "generic_read"
    },
    {
      "name": "dsv",
      "format": "D24_UNORM_S8_UINT",
      "initial_state": "dsv_write",
      "clear_depth": 1,
      "clear_stencil": 0
    }
  ],
  "sampler": [
    {
      "name": "bilinear",
      "filter_min": "linear",
      "filter_mag": "linear",
      "filter_mip": "point",
      "address_mode": ["clamp", "clamp"],
      "mip_lod_bias": 0,
      "max_anisotropy": 0,
      "comparison_func": "never",
      "min_lod": 0,
      "max_lod": 65535
    },
    {
      "name": "trilinear",
      "filter_min": "linear",
      "filter_mag": "linear",
      "filter_mip": "linear",
      "address_mode": ["clamp", "clamp", "clamp"],
      "mip_lod_bias": 0,
      "max_anisotropy": 0,
      "comparison_func": "never",
      "border_color": [0,0,0,0],
      "min_lod": 0,
      "max_lod": 65535
    }
  ],
  "max_model_num" : 1024,
  "max_material_num" : 1024,
  "gpu_handle_num_view": 32,
  "gpu_handle_num_sampler": 8,
  "render_pass": [
    {
      "name": "copy resource",
      "type": "copy resource",
      "enabled": true,
      "command_queue": "queue_copy",
      "execute": true
    },
    {
      "name": "dispatch cs",
      "type": "dispatch cs",
      "enabled": true,
      "command_queue": "queue_compute",
      "wait_pass": ["output to swapchain", "debug buffer"],
      "execute": true,
      "buffer_list": [
        {
          "name": "uav",
          "state": "uav"
        }
      ],
      "material": "dispatch cs",
      "pass_vars": {
        "thread_group_count_x": 32,
        "thread_group_count_y": 32
      }
    },
    {
      "name": "prez",
      "type": "mesh transform",
      "enabled": true,
      "command_queue": "queue_graphics",
      "wait_pass": ["copy resource"],
      "execute": true,
      "buffer_list": [
        {
          "name": "camera",
          "state": "cbv"
        },
        {
          "name": "transforms",
          "state": "srv_non_ps"
        },
        {
          "name": "dsv",
          "state": "dsv_write"
        }
      ],
      "material": "prez",
      "pass_vars": {
        "clear_depth": true,
        "stencil_val": 255
      }
    },
    {
      "name": "pingpong-a",
      "type": "postprocess",
      "enabled": true,
      "command_queue": "queue_graphics",
      "buffer_list": [
        {
          "name": "cbv-a",
          "state": "cbv"
        },
        {
          "name": "pingpong",
          "state": "rtv"
        }
      ],
      "flip_pingpong": ["pingpong"],
      "material": "pingpong-a"
    },
    {
      "name": "pingpong-b",
      "type": "postprocess",
      "enabled": true,
      "command_queue": "queue_graphics",
      "buffer_list": [
        {
          "name": "cbv-b",
          "state": "cbv"
        },
        {
          "name": "pingpong",
          "state": "srv_ps"
        },
        {
          "name": "pingpong",
          "state": "rtv"
        }
      ],
      "sampler": ["bilinear"],
      "flip_pingpong": ["pingpong"],
      "material": "pingpong-bc"
    },
    {
      "name": "pingpong-c",
      "type": "postprocess",
      "enabled": true,
      "command_queue": "queue_graphics",
      "buffer_list": [
        {
          "name": "cbv-c",
          "state": "cbv"
        },
        {
          "name": "pingpong",
          "state": "srv_ps"
        },
        {
          "name": "pingpong",
          "state": "rtv"
        }
      ],
      "sampler": ["bilinear"],
      "flip_pingpong": ["pingpong"],
      "material": "pingpong-bc"
    },
    {
      "name": "output to swapchain",
      "type": "postprocess",
      "enabled": true,
      "command_queue": "queue_graphics",
      "wait_pass": ["dispatch cs"],
      "execute": true,
      "buffer_list": [
        {
          "name": "uav",
          "state": "srv_ps"
        },
        {
          "name": "dsv",
          "state": "srv_ps"
        },
        {
          "name": "swapchain",
          "state": "rtv"
        },
        {
          "name": "pingpong",
          "state": "srv_ps"
        }
      ],
      "sampler": ["bilinear"],
      "material": "output to swapchain",
      "pass_vars": {
        "size_type": "swapchain_relative"
      }
    },
    {
      "name": "debug buffer",
      "type": "postprocess",
      "enabled": false,
      "command_queue": "queue_graphics",
      "wait_pass": ["dispatch cs"],
      "execute": true,
      "buffer_list": [
        {
          "name": "swapchain",
          "state": "rtv"
        }
      ],
      "sampler": ["bilinear"],
      "prepass_barrier": [
        {
          "buffer_name": "swapchain",
          "type": "transition",
          "split_type": "none",
          "state_before": ["present"],
          "state_after": ["rtv"]
        }
      ],
      "material": "output to swapchain"
    },
    {
      "name": "imgui",
      "type": "imgui",
      "enabled": true,
      "command_queue": "queue_graphics",
      "execute": true,
      "buffer_list": [
        {
          "name": "swapchain",
          "state": "rtv"
        }
      ],
      "flip_pingpong": ["pingpong"]
    }
  ]
}
