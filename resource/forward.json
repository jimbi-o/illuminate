{
  "frame_buffer_num": 2,
  "primarybuffer_width": 1920,
  "primarybuffer_height": 1080,
  "primarybuffer_format": "R8G8B8A8_UNORM",
  "window": {
    "title": "forward.json",
    "width": 1920,
    "height" : 1080
  },
  "command_queue": [
    {
      "name": "queue_graphics",
      "type": "3d",
      "priority": "normal",
      "command_list_num": 1
    },
    {
      "name": "queue_compute",
      "type": "compute",
      "priority": "normal",
      "command_list_num": 1
    },
    {
      "name": "queue_copy",
      "type": "copy",
      "priority": "normal",
      "command_list_num": 1
    }
  ],
  "swapchain": {
    "command_queue": "queue_graphics",
    "format": "R8G8B8A8_UNORM"
  },
  "buffer": [
    {
      "name": "uav",
      "format": "R8G8B8A8_UNORM",
      "heap_type": "default",
      "dimension": "texture2d",
      "size_type": "swapchain_relative",
      "width": 1.0,
      "height": 1.0,
      "depth_or_array_size": 1,
      "miplevels": 1,
      "sample_count": 1,
      "sample_quality": 0,
      "layout": "unknown",
      "mip_width": 0,
      "mip_height": 0,
      "mip_depth": 0,
      "initial_state": "uav"
    }
  ],
  "gpu_handle_num_view": 32,
  "gpu_handle_num_sampler": 8,
  "render_pass": [
    {
      "name": "clear uav",
      "enabled": true,
      "command_queue": "queue_compute",
      "wait_pass": ["copy to swapchain"],
      "execute": true,
      "buffer_list": [
        {
          "name": "uav",
          "state": "uav"
        }
      ]
    },
    {
      "name": "copy to swapchain",
      "enabled": true,
      "command_queue": "queue_graphics",
      "wait_pass": ["clear uav"],
      "execute": true,
      "buffer_list": [
        {
          "name": "uav",
          "state": "copy_source"
        },
        {
          "name": "swapchain",
          "state": "copy_dest"
        }
      ],
      "postpass_barrier": [
        {
          "buffer_name": "swapchain",
          "type": "transition",
          "split_type": "none",
          "state_before": ["copy_dest"],
          "state_after": ["present"]
        }
      ]
    }
  ]
}
