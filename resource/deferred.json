{
  "frame_buffer_num": 2,
  "primarybuffer_width": 1920,
  "primarybuffer_height": 1080,
  "primarybuffer_format": "R8G8B8A8_UNORM",
  "window": {
    "title": "deferred",
    "width": 1920,
    "height" : 1080
  },
  "command_queue": [
    {
      "name": "queue_graphics",
      "type": "3d",
      "priority": "normal",
      "command_list_num": 1
    },
    {
      "name": "queue_compute",
      "type": "compute",
      "priority": "normal",
      "command_list_num": 1
    },
    {
      "name": "queue_copy",
      "type": "copy",
      "priority": "normal",
      "command_list_num": 1
    }
  ],
  "swapchain": {
    "command_queue": "queue_graphics",
    "format": "R8G8B8A8_UNORM"
  },
  "buffer": [
    {
      "name": "primary",
      "initial_state": "uav",
      "format": "R8G8B8A8_UNORM"
    },
    {
      "name": "linear depth",
      "initial_state": "uav",
      "format": "R32_FLOAT"
    }
  ],
  "gpu_handle_num_view": 32,
  "gpu_handle_num_sampler": 8,
  "sampler": [
    {
      "name": "bilinear",
      "filter_min": "linear",
      "filter_mag": "linear",
      "filter_mip": "point",
      "address_mode": ["clamp", "clamp"],
      "mip_lod_bias": 0,
      "max_anisotropy": 0,
      "comparison_func": "never",
      "min_lod": 0,
      "max_lod": 65535
    },
    {
      "name": "trilinear",
      "filter_min": "linear",
      "filter_mag": "linear",
      "filter_mip": "linear",
      "address_mode": ["clamp", "clamp", "clamp"],
      "mip_lod_bias": 0,
      "max_anisotropy": 0,
      "comparison_func": "never",
      "border_color": [0,0,0,0],
      "min_lod": 0,
      "max_lod": 65535
    }
  ],
  "render_pass": [
    {
      "name": "copy resource",
      "type": "copy resource",
      "enabled": true,
      "command_queue": "queue_copy"
    },
    {
      "name": "prez",
      "type": "mesh transform",
      "enabled": true,
      "command_queue": "queue_graphics",
      "wait_pass": ["copy resource"],
      "buffer_list": [
        {
          "name": "camera",
          "state": "cbv"
        },
        {
          "name": "transforms",
          "state": "srv_non_ps"
        },
        {
          "name": "material_common_settings",
          "state": "cbv",
          "index_offset" : 1
        },
        {
          "name": "material_indices",
          "state": "srv_ps",
          "index_offset" : 1
        },
        {
          "name": "textures",
          "state": "srv_ps",
          "index_offset" : 2
        },
        {
          "name": "dsv",
          "state": "dsv_write"
        }
      ],
      "material": "prez",
      "sampler": ["scene"],
      "pass_vars": {
        "clear_depth": true
      }
    },
    {
      "name": "gbuffer",
      "type": "mesh transform",
      "enabled": true,
      "command_queue": "queue_graphics",
      "material": "gbuffer geom",
      "buffer_list": [
        {
          "name": "camera",
          "state": "cbv"
        },
        {
          "name": "transforms",
          "state": "srv_non_ps"
        },
        {
          "name": "material_common_settings",
          "state": "cbv",
          "index_offset" : 1
        },
        {
          "name": "material_indices",
          "state": "srv_ps",
          "index_offset" : 1
        },
        {
          "name": "textures",
          "state": "srv_ps",
          "index_offset" : 2
        },
        {
          "name": "gbuffer0",
          "state": "rtv"
        },
        {
          "name": "gbuffer1",
          "state": "rtv"
        },
        {
          "name": "gbuffer2",
          "state": "rtv"
        },
        {
          "name": "gbuffer3",
          "state": "rtv"
        },
        {
          "name": "dsv",
          "state": "dsv_read"
        }
      ],
      "sampler": ["scene"],
      "pass_vars": {
        "use_material": true
      }
    },
    {
      "name": "linear depth",
      "type": "dispatch cs",
      "enabled": true,
      "command_queue": "queue_compute",
      "wait_pass": ["prez"],
      "material": "linear depth",
      "buffer_list": [
        {
          "name": "linear_depth_cbuffer",
          "state": "cbv"
        },
        {
          "name": "dsv",
          "state": "srv_non_ps"
        },
        {
          "name": "linear depth",
          "state": "uav"
        }
      ],
      "pass_vars": {
        "thread_group_count_x": 16,
        "thread_group_count_y": 16
      }
    },
    {
      "name": "lighting",
      "type": "dispatch cs",
      "enabled": true,
      "command_queue": "queue_compute",
      "wait_pass": ["gbuffer"],
      "material": "brdf lighting",
      "buffer_list": [
        {
          "name": "deferred_lighting_cbuffer",
          "state": "cbv"
        },
        {
          "name": "gbuffer0",
          "state": "srv_non_ps"
        },
        {
          "name": "gbuffer1",
          "state": "srv_non_ps"
        },
        {
          "name": "gbuffer2",
          "state": "srv_non_ps"
        },
        {
          "name": "gbuffer3",
          "state": "srv_non_ps"
        },
        {
          "name": "dsv",
          "state": "srv_non_ps"
        },
        {
          "name": "primary",
          "state": "uav"
        }
      ],
      "pass_vars": {
        "thread_group_count_x": 16,
        "thread_group_count_y": 16
      }
    },
    {
      "name": "output to swapchain",
      "type": "postprocess",
      "enabled": true,
      "command_queue": "queue_graphics",
      "wait_pass": ["lighting"],
      "buffer_list": [
        {
          "name": "primary",
          "state": "srv_ps"
        },
        {
          "name": "swapchain",
          "state": "rtv"
        }
      ],
      "material": "oetf",
      "sampler": ["bilinear"]
    },
    {
      "name": "imgui",
      "type": "imgui",
      "enabled": true,
      "command_queue": "queue_graphics",
      "buffer_list": [
        {
          "name": "swapchain",
          "state": "rtv"
        }
      ]
    }
  ]
}
